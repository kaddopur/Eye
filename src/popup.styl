radius = 8px

.container
  width 600px
  padding 10px

.column
  float left

  width 50%
  h1
    text-transform capitalize
    text-align center
    font-size 1.2em
  ul
    margin 10px
    -webkit-box-shadow 2px 2px 2px 1px rgba(255, 255, 255, .5)
  li 
    display block
    height 30px
    background rgba(189, 192, 186, .35)
    -webkit-transition all .3s ease-in-out
    &:first-child
      -webkit-border-top-right-radius radius
      -webkit-border-top-left-radius radius
    &:last-child
      -webkit-border-bottom-right-radius radius
      -webkit-border-bottom-left-radius radius
    &:nth-child(odd)
      background rgba(145, 152, 159, .35)
    &:hover
      background rgba(255, 177, 27, .35)



span.info
  display block
  float left 
  width 242px
  line-height 24px
  margin 4px 0 0 7px
  height 16px
  font-size .5em
  .title
    margin-right 8px

span.dismiss
  display block
  float right
  width 16px
  height 16px
  margin 7px 7px
  opacity 0.8


