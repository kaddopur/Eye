{
  // Required
  "name":"鄉民之眼",
  "version":"1.8.9",
  "manifest_version": 2,
  
  // Recommanded
  "description": "用來看漫畫的",
  "icons":{
    "16":"icon16.png",
    "48":"icon48.png",
    "128":"icon128.png"
  },

  // Pick one (or none)
  "browser_action": {
    "default_icon": "icon.png", 
    "default_title": "訂閱漫畫更新", 
    "default_popup": "popup.html" 
  },
  
  // Add any of these that you need
  "content_scripts": [
    {
        "matches": ["http://www.8comic.com/show/*"],
        "css": ["css/viewer.css", "css/font-awesome.css"],
        "js": ["js/jquery-1.7.1.min.js", "js/cs_8comic.js"]
    }
  ],
  "permissions":[
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
  	"img/sub_gray.png",
  	"img/prev_gray.png",
  	"img/menu_gray.png",
  	"img/next_gray.png",
  	"img/prev.png",
  	"img/menu.png",
  	"img/next.png",
  	"img/resize.png",
  	"img/resize_gray.png"
  ]
}
