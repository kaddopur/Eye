{
  "name":"鄉民之眼",
  "version":"1.8.9",
  "permissions":[
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons":{
    "16":"icon16.png",
    "48":"icon48.png",
    "128":"icon128.png"
  },
  "background_page":"background.html",
  "browser_action": {
    "default_icon": "icon.png", 
    "default_title": "訂閱漫畫更新", 
    "default_popup": "popup.html" 
  },
  "options_page": "options.html",
  "content_scripts": [
    {
        "matches": ["http://www.8comic.com/show/*"],
        "css": ["css/viewer.css"],
        "js": ["js/jquery-1.7.1.min.js", "js/cs_8comic.js"]
    }
  ]
}
