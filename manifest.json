{
  "name":"鄉民之眼",
  "version":"2.2.3",
  "manifest_version": 2,
  "description": "看漫畫的擴充套件，支援8Comic, Dm5, SFACG, 99770",
  "icons":{
    "16":"icon16.png",
    "48":"icon48.png",
    "128":"icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png", 
    "default_title": "漫畫列表", 
    "default_popup": "popup.html" 
  },
  "background": {
    "scripts": ["js/jquery-1.7.1.min.js", "js/manager.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "content_scripts": [
    {
        "matches": ["http://www.8comic.com/show/*"],
        "css": ["css/reset.css", "css/viewer.css"],
        "js": ["js/jquery-1.7.1.min.js", "js/cs_8comic.js"]
    },
    {
        "matches": ["http://tel.dm5.com/m*/"],
        "css": ["css/reset.css", "css/viewer.css"],
        "js": ["js/jquery-1.7.1.min.js", "js/cs_dm5.js"]
    },
    {
        "matches": ["http://*.sfacg.com/AllComic/*"],
        "css": ["css/reset.css", "css/viewer.css"],
        "js": ["js/jquery-1.7.1.min.js", "js/cs_sfacg.js"]
    },
    {
        "matches": ["http://mh.99770.cc/comic/*"],
        "css": ["css/reset.css", "css/viewer.css"],
        "js": ["js/jquery-1.7.1.min.js", "js/cs_99770.js"]
    }
  ],
  "permissions":[
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*",
    "background",
    "alarms"
  ],
  "web_accessible_resources": [
  	"img/forward.png",
    "img/backward.png",
    "img/fullscreen.png",
    "img/star.png",
    "img/list.png",
    "img/texture.png",
    "img/remove.png",
    "css/options.css"
  ]
}
