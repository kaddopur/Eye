{
  // Required
  "name":"鄉民之眼",
  "version":"1.9",
  "manifest_version": 2,
  
  // Recommanded
  "description": "用來看漫畫的",
  "icons":{
    "16":"icon16.png",
    "48":"icon48.png",
    "128":"icon128.png"
  },

  // Pick one (or none)
  "browser_action": {
    "default_icon": "icon.png", 
    "default_title": "訂閱漫畫更新", 
    "default_popup": "popup.html" 
  },
  
  // Add any of these that you need
  "background": {
    "scripts": ["js/jquery-1.7.1.min.js", "js/manager.js"],
    "persistent": true
  },
  "content_scripts": [
    {
        "matches": ["http://www.8comic.com/show/*"],
        "css": ["css/reset.css", "css/viewer.css"],
        "js": ["js/jquery-1.7.1.min.js", "js/cs_8comic.js"]
    },
    {
        "matches": ["http://tel.dm5.com/m*/"],
        "css": ["css/reset.css", "css/viewer.css"],
        "js": ["js/jquery-1.7.1.min.js", "js/cs_dm5.js"]
    }
  ],
  "permissions":[
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*",
    "background",
    "alarms"
  ],
  "web_accessible_resources": [
  	"img/forward.png",
    "img/backward.png",
    "img/fullscreen.png",
    "img/star.png",
    "img/list.png",
    "img/texture.png"
  ]
}
